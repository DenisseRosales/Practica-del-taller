@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center" style="padding: 4rem 0;">
    <div style="max-width: 1200px; margin: 0 auto;">
        
        <h1 style="font-size: 3rem; font-weight: bold; color: #667eea; margin-bottom: 1rem;">
            Lista de Tareas
        </h1>
        
        <p style="font-size: 1.3rem; color: #666; margin-bottom: 3rem;">
            Organiza tu vida de manera simple y efectiva
        </p>

        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            <a asp-controller="Tareas" asp-action="Index" class="btn btn-primary btn-lg" style="font-size: 1.2rem; padding: 1rem 3rem;">
                Ver mis tareas
            </a>
        }
        else
        {
            <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg" style="font-size: 1.2rem; padding: 1rem 3rem;">
                    Iniciar Sesión
                </a>
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-success btn-lg" style="font-size: 1.2rem; padding: 1rem 3rem;">
                    Registrarse
                </a>
            </div>
        }

        <div style="margin-top: 4rem; display: grid; grid-template-columns: repeat(4, 1fr); gap: 1.5rem;">
            <div style="padding: 2rem; background: rgba(102, 126, 234, 0.1); border-radius: 15px;">
                <h3 style="color: #667eea; margin-bottom: 0.5rem; font-size: 1.3rem;">Gestión CRUD</h3>
                <p style="color: #666; font-size: 0.95rem;">Crea, edita y elimina tareas fácilmente</p>
            </div>
            
            <div style="padding: 2rem; background: rgba(118, 75, 162, 0.1); border-radius: 15px;">
                <h3 style="color: #764ba2; margin-bottom: 0.5rem; font-size: 1.3rem;">Prioridades</h3>
                <p style="color: #666; font-size: 0.95rem;">Organiza por alta, media o baja prioridad</p>
            </div>
            
            <div style="padding: 2rem; background: rgba(102, 126, 234, 0.1); border-radius: 15px;">
                <h3 style="color: #667eea; margin-bottom: 0.5rem; font-size: 1.3rem;">Personal</h3>
                <p style="color: #666; font-size: 0.95rem;">Cada usuario tiene su lista privada</p>
            </div>

            <div style="padding: 2rem; background: rgba(118, 75, 162, 0.1); border-radius: 15px;">
                <h3 style="color: #764ba2; margin-bottom: 0.5rem; font-size: 1.3rem;">Proyecto ASP.NET Core</h3>
                <p style="color: #666; font-weight: 600; font-size: 0.95rem;">Jorge Eduardo García Hernández</p>
            </div>
        </div>
    </div>
</div>