@model ListaTareasApp.Models.Tarea

@{
    ViewData["Title"] = "Eliminar Tarea";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="mb-4">🗑️ Eliminar Tarea</h1>

            <div class="alert alert-warning">
                <h4>⚠️ ¿Estás seguro de que deseas eliminar esta tarea?</h4>
                <p>Esta acción no se puede deshacer.</p>
            </div>

            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Título</dt>
                        <dd class="col-sm-9">@Model.Titulo</dd>

                        <dt class="col-sm-3">Descripción</dt>
                        <dd class="col-sm-9">@Model.Descripcion</dd>

                        <dt class="col-sm-3">Prioridad</dt>
                        <dd class="col-sm-9">
                            @if (Model.Prioridad == "Alta")
                            {
                                <span class="badge badge-danger">🔴 Alta</span>
                            }
                            else if (Model.Prioridad == "Media")
                            {
                                <span class="badge badge-warning">🟡 Media</span>
                            }
                            else
                            {
                                <span class="badge badge-info">🔵 Baja</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Estado</dt>
                        <dd class="col-sm-9">
                            @if (Model.Completada)
                            {
                                <span class="badge badge-success">✓ Completada</span>
                            }
                            else
                            {
                                <span class="badge badge-warning">⏳ Pendiente</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Fecha de creación</dt>
                        <dd class="col-sm-9">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">🗑️ Sí, eliminar</button>
                        <a asp-action="Index" class="btn btn-secondary">❌ No, cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>